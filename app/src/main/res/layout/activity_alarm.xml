<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_bg"
    android:padding="32dp">

    <!-- GROUP 1: LOCKED STATE (Clock Dashboard) -->
    <LinearLayout
        android:id="@+id/layoutClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSnooze"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri, 22 Nov"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:30"
            android:textSize="96sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_primary"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tvContextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F  A  J  R"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:letterSpacing="0.3"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAlarmStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock to dismiss"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="32dp"/>
    </LinearLayout>

    <!-- GROUP 2: UNLOCKED STATE (Visual Guide) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutScanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgNfcIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_nfc_large"
            app:tint="#000000"
            android:padding="28dp"
            android:background="@drawable/bg_circle_pulse"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.15"/>

        <View
            android:id="@+id/viewPulse1"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/bg_circle_pulse"
            android:alpha="0.5"
            app:layout_constraintTop_toTopOf="@id/imgNfcIcon"
            app:layout_constraintBottom_toBottomOf="@id/imgNfcIcon"
            app:layout_constraintStart_toStartOf="@id/imgNfcIcon"
            app:layout_constraintEnd_toEndOf="@id/imgNfcIcon"/>

        <View
            android:id="@+id/viewPulse2"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/bg_circle_pulse"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="@id/imgNfcIcon"
            app:layout_constraintBottom_toBottomOf="@id/imgNfcIcon"
            app:layout_constraintStart_toStartOf="@id/imgNfcIcon"
            app:layout_constraintEnd_toEndOf="@id/imgNfcIcon"/>

        <TextView
            android:id="@+id/tvScanHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the tag to stop alarm"
            android:textSize="24sp"
            android:textColor="@color/app_accent"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@id/imgNfcIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvScanInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Align back of phone with Tag"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvScanHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGraceTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvScanInstruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SNOOZE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSnooze"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:text="Snooze (3min)"
        android:textColor="@color/app_accent"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/app_accent"
        app:strokeWidth="1dp"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDismiss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- UNLOCK BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDismiss"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:text="Unlock to Stop"
        android:textColor="@color/midnight_bg"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        app:backgroundTint="@color/app_accent"
        app:cornerRadius="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

    <!-- EMERGENCY BACKDOOR -->
    <!-- Updated Max to 600 for 60 seconds -->
    <ProgressBar
        android:id="@+id/progressEmergency"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="4dp"
        android:layout_marginBottom="8dp"
        android:progressDrawable="@drawable/bg_circle_pulse"
        android:progressTint="@color/error_red"
        android:visibility="gone"
        android:max="600"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@id/tvEmergency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost Tag?"
        android:textSize="12sp"
        android:textColor="#333333"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>